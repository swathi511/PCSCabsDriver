<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/rbh_rl"
    >

    <TextView android:id="@+id/rbh_tv_date"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/rect_ash_round_bg"
        android:text="@string/xxx"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/rbh_tv_date"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"

        >

   <LinearLayout android:id="@+id/rbh_ll1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Completed Rides"
           android:textColor="#999797"
           android:textSize="10sp"
           android:layout_marginLeft="4dp"
           android:layout_marginRight="8dp"/>
       <TextView android:id="@+id/rbh_tv_completed_rides"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorBlack"
           android:textSize="10sp"
           android:text="0"
           android:textStyle="bold"
           />
   </LinearLayout>
        <LinearLayout android:id="@+id/rbh_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled Rides"
                android:textColor="#999797"
                android:textSize="10sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"/>
            <TextView android:id="@+id/rbh_tv_cancelled_rides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:text="0"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout android:id="@+id/rbh_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/colorAshLight"
                android:textSize="10sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="gone"
                />
            <TextView android:id="@+id/rbh_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBlue"
                android:textSize="13sp"
                android:text="-"
                android:textStyle="bold" />
        </LinearLayout>

   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/rbh_tv_date"
        android:layout_margin="16dp"/>



</RelativeLayout>