<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView android:id="@+id/fsdr_iv_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/retry"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:visibility="gone"/>
    
    <LinearLayout android:id="@+id/fsdr_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    <TextView android:id="@+id/fsdr_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="date"
        android:textColor="@color/colorTextBlue"
        android:gravity="left"
        android:layout_weight="1"/>

        <ImageView android:id="@+id/fsdr_iv_date"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/m_edit" />

    </LinearLayout>

    <TextView android:id="@+id/fsdr_tv_no_rides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No rides found for this date!"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_gravity="right"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fsdr_rview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>