<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.TrackRideActivity"/>

        <TextView android:id="@+id/aors_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/ride_progress"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:background="@drawable/rect_bg"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/colorAshLight"
            android:id="@+id/aors_rl"
            android:layout_below="@+id/aors_tv_title">

            <LinearLayout android:id="@+id/aors_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/ll_bg"
                android:layout_margin="6dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car_image"
                    android:background="@color/colorWhite"
                    android:layout_margin="8dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAsh"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"/>
                <TextView android:id="@+id/aors_tv_cloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/c_loc"
                    android:layout_margin="8dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView android:id="@+id/aors_tv_new_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Booking Alloted"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTextBlue"
            android:padding="6dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_information"
            android:drawablePadding="16dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/aors_rl"
            android:layout_margin="12dp"
            android:textStyle="bold"/>


        <ImageButton android:id="@+id/aors_ib_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_phone"
            android:background="@drawable/round_btn_green"
            android:layout_below="@+id/aors_rl"
            android:layout_margin="16dp"
            android:scaleX="0.9"
            android:scaleY="0.9"/>/>

        <ImageButton android:id="@+id/aors_bt_get_directions"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_navigation"
            android:background="@drawable/round_btn_red"
            android:layout_margin="16dp"
            android:layout_below="@+id/aors_ib_call"
            android:scaleX="0.9"
            android:scaleY="0.9"/>/>

        <ImageButton android:id="@+id/aors_bt_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/stop"
            android:background="@drawable/round_btn_yellow"
            android:layout_margin="16dp"
            android:layout_below="@+id/aors_bt_get_directions"
            android:scaleX="0.9"
            android:scaleY="0.9" />

        <ImageButton android:id="@+id/aors_ib_dots"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_dots_vertical"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_btn_red"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/aors_rl_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_peekHeight="200dp"
        app:behavior_hideable="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:elevation="4dp"
        android:background="#ffffff">

        <ImageButton android:id="@+id/aors_ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_circle"
            android:layout_alignParentRight="true"
            android:background="@color/colorWhite"
            android:layout_margin="12dp" />
        <TextView android:id="@+id/aors_tv_creq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_req_from"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:textAllCaps="true"
            android:textColor="@color/colorTextBlue"
            android:textStyle="bold"/>
        <TextView android:id="@+id/aors_tv_gname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aors_tv_creq_title"
            android:text="@string/g_name"
            android:textColor="@color/colorAsh"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="4dp"
            android:textSize="11sp"/>
        <TextView android:id="@+id/aors_tv_gname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aors_tv_creq_title"
            android:layout_toRightOf="@+id/aors_tv_gname_title"
            android:text="@string/xxx"
            android:textColor="@color/colorAsh"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="11sp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/aors_tv_gmobile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aors_tv_gname_title"

            android:text="@string/g_mobile"
            android:textColor="@color/colorAsh"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="4dp"
            android:textSize="11sp"/>
        <TextView android:id="@+id/aors_tv_gmobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aors_tv_gname_title"
            android:layout_toRightOf="@+id/aors_tv_gmobile_title"
            android:text="@string/xxx"
            android:textColor="@color/colorAsh"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="11sp"
            android:textStyle="bold"/>

        <LinearLayout android:id="@+id/aors_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_below="@+id/aors_tv_gmobile_title">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/round_green"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"/>
            <TextView android:id="@+id/aors_tv_ploc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pickup_colon"
                android:textColor="#6e6e6e"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="4dp"/>
            <TextView android:id="@+id/aors_tv_ploc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textColor="@color/colorBlack"
                android:textSize="11sp"
                android:gravity="left"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/aors_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_below="@+id/aors_ll1">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/round_pink"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"/>

            <TextView android:id="@+id/aors_tv_dloc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drop_colon"
                android:textColor="#6e6e6e"
                android:layout_marginRight="6dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView android:id="@+id/aors_tv_dloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textColor="@color/colorBlack"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout android:id="@+id/aors_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:layout_below="@+id/aors_ll2">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/clock"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="6dp"/>
            <TextView android:id="@+id/aors_tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xxx"
                android:textColor="@color/colorAsh"
                android:layout_marginRight="6dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/info"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="6dp"
                    android:layout_gravity="center"/>

                <TextView android:id="@+id/aors_tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX Payment"
                    android:textColor="@color/colorTextBlue"
                    android:layout_marginRight="6dp"
                    android:textSize="11sp"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <Button android:id="@+id/aors_bt_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drop"
            android:layout_centerInParent="true"
            android:layout_below="@+id/aors_ll3"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:padding="8dp"
            android:textSize="13sp"
            android:textColor="#ffd600"
            android:textAllCaps="false"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>