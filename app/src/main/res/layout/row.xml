<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/ma_tv_creq_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c_req_from"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textAllCaps="true"
        android:textColor="@color/colorTextBlue"
        android:textStyle="bold"/>

    <TextView android:id="@+id/ma_tv_gname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma_tv_creq_title"
        android:text="@string/g_name"
        android:textColor="@color/colorAsh"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp"
        android:textSize="12sp"/>
    <TextView android:id="@+id/ma_tv_gname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma_tv_creq_title"
        android:layout_toRightOf="@+id/ma_tv_gname_title"
        android:text="Anand Kumar"
        android:textColor="@color/colorAsh"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="6dp"
        android:textSize="12sp"
        android:textStyle="bold"/>
    <TextView android:id="@+id/ma_tv_gmobile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma_tv_gname_title"
        android:text="@string/g_mobile"
        android:textColor="@color/colorAsh"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp"
        android:textSize="12sp"/>
    <TextView android:id="@+id/ma_tv_gmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma_tv_gname_title"
        android:layout_toRightOf="@+id/ma_tv_gmobile_title"
        android:text="9898989898"
        android:textColor="@color/colorAsh"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="6dp"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <LinearLayout android:id="@+id/ma_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ma_tv_gmobile_title">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/round_green"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"/>
        <TextView android:id="@+id/ma_tv_ploc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup_colon"
            android:textColor="#6e6e6e"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="4dp"/>
        <TextView android:id="@+id/ma_tv_ploc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7-51/11,Nagendranagar,Habsiguda,Hydearabad"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:gravity="left"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/ma_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ma_ll1">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/round_pink"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"/>

        <TextView android:id="@+id/ma_tv_dloc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drop_colon"
            android:textColor="#6e6e6e"
            android:layout_marginRight="6dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView android:id="@+id/ma_tv_dloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-57/Ram Enclave,Gachibowli,Hydearabad "
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout android:id="@+id/ma_ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ma_ll2"
        android:gravity="center">
        <Button android:id="@+id/ma_bt_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="12sp"
            android:padding="6dp"
            android:background="@drawable/ma_bt_bg"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <!--
        <Button android:id="@+id/ma_bt_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decline"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="12sp"
            android:padding="6dp"
            android:background="@drawable/ma_bt_bg"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>


    <Button android:id="@+id/ma_bt_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickup"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ma_ll4"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ma_bt_bg"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:visibility="gone"/>-->

    </LinearLayout>

</RelativeLayout>