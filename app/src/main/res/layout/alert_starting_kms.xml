<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <TextView android:id="@+id/ask_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Starting Kms"
        android:textStyle="bold"
        android:textColor="@color/colorAsh"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_margin="16dp"
        android:textAllCaps="true"/>
    <View android:id="@+id/ask_vw"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_below="@+id/ask_tv_text"/>
    <EditText android:id="@+id/ask_et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:hint="xxxx"
        android:textColorHint="#9e9e9e"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/colorAsh"
        android:layout_below="@+id/ask_vw"
        android:background="@drawable/alert_et_bg"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ask_et_otp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button android:id="@+id/ask_bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Ok"
            android:textSize="12sp"
            android:background="@drawable/btn_bg_green"
            android:textColor="@color/colorWhite"

            android:textAllCaps="false"/>
        <Button android:id="@+id/ask_bt_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/cancel"
            android:textSize="12sp"
            android:background="@drawable/btn_bg_red"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:visibility="gone"/>


    </LinearLayout>




</RelativeLayout>