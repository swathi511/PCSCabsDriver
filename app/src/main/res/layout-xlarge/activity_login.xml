<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1976d2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView android:id="@+id/al_tv_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/Signup"
                    android:textColor="@color/colorLoginBlue"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fpwd"
                    android:textSize="20sp"
                    android:textColor="@color/colorLoginBlue"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>

            <EditText android:id="@+id/am_et_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_uname"
                android:textSize="22sp"
                android:textColorHint="@color/colorLoginBlue"
                android:textColor="@color/colorLoginBlue"
                android:background="@drawable/login_et_bg"
                android:padding="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:drawableRight="@android:drawable/sym_action_email"
                android:inputType="text"/>

            <EditText android:id="@+id/am_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_pwd"
                android:textSize="22sp"
                android:textColorHint="@color/colorLoginBlue"
                android:textColor="@color/colorLoginBlue"
                android:background="@drawable/login_et_bg"
                android:padding="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:drawableRight="@android:drawable/ic_lock_idle_lock"
                android:inputType="textPassword"/>

        </LinearLayout>

        <Button android:id="@+id/am_bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:textSize="20sp"
            android:background="@drawable/login_bt_bg"
            android:padding="26dp"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>